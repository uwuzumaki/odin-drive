<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head") %>
  <body>
    <%- include("./partials/navbar") %>
    <div class="flex justify-between">
      <a
        class="mx-8"
        href="/user/folder/<%= file.folder_id %>/<%= file.id %>/details"
        >&#12296;- Back</a
      >
    </div>
    <div class="container mx-auto mt-[15%] flex justify-center">
      <form
        class="grid grid-cols-2"
        method="POST"
        action="/user/<%= file.id %>/rename">
        <label
          class="mx-2 justify-self-end text-xl font-semibold"
          for="filename"
          >New Filename</label
        >
        <input
          class="mx-2 h-7 border-b-[1px] pt-4 pb-2 outline-0 duration-300 focus:border-blue-400 focus:outline-none"
          type="text"
          name="filename"
          id="filename" />
        <button
          class="col-start-2 mt-4 mb-2 cursor-pointer justify-self-center rounded-3xl border border-black px-2 py-1"
          type="submit">
          Rename!
        </button>
        <input type="hidden" name="folder_id" value="<%= file.folder_id %>" />
        <input type="hidden" name="file_id" value="<%= file.id %>" />
      </form>
    </div>
    <%- include('./partials/footer') %>
  </body>
</html>
