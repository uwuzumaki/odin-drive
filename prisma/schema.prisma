generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Folder {
  id        Int      @id @default(autoincrement())
  name      String
  parent_id Int?
  parent    Folder?  @relation("FolderToFolder", fields: [parent_id], references: [id])
  child     Folder[] @relation("FolderToFolder")
}
